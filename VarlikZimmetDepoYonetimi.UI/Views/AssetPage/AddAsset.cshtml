@model VarlikZimmetDepoYonetimi.UI.Models.ApiDTO.AssetAddDTO

@{
    Layout = "~/Views/Shared/_AddAsset.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/startbootstrap-sb-admin-gh-pages/css/styles.css" rel="stylesheet" />

<form asp-action="AddAsset" asp-controller="AssetPage">
    <div class="container py-5">
        <div class="row">
            <div class="col-md-6 mt-3 form-group">
                <div class="row">
                    <div class="form-check form-switch py-3 col-md-4">
                        <input class="form-check-input" type="checkbox" role="switch" onclick="barcode_Click" id="flexSwitchCheckDefault">
                        <label class="form-check-label" for="flexSwitchCheckDefault">Barkod</label>
                    </div>
                    @*<div class="col-md-6">
                        <label class="switch">
                            <input class="form-check-input" asp-for="@Model.IsBarcode" type="checkbox" id="AddAssetCheckID" checked>
                            <divs class="slider round">
                            </divs>
                        </label>
                    </div>*@
                    <div class="col-md-4">
                        <label>Miktar</label>
                        <input asp-for="Quantity" type="text" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label>Birim</label>
                        <input asp-for="UnitName" type="text" class="form-control" />
                    </div>
                </div>
                <label>Barkod</label>
                <input asp-for="Barcode" type="text" class="form-control" />
                <br />
                <label>Kayıt Numarası</label>
                <input asp-for="RegistrationNumber" type="text" class="form-control" />
                <br />
                <label>Ürün Grubu</label>
                <select asp-for="SelectedAssetGroup" asp-items="@Model.AssetGroup.Select(x=> new SelectListItem { Text = x.AssetGroupName, Value = x.AssetGroupID.ToString() })" class="form-select">
                    <option>Seçiniz</option>
                </select>
                <br />
                <label>Ürün Tipi</label>
                <select asp-for="SelectedAssetType" asp-items="@Model.AssetType.Select(x=> new SelectListItem { Text = x.AssetTypeName, Value = x.AssetTypeID.ToString() })" class="form-select">
                    <option>Seçiniz</option>
                </select>
                <br />
                <label>Marka</label>
                <select asp-for="SelectedBrand" asp-items="@Model.Brand.Select(x=> new SelectListItem { Text = x.BrandModelName, Value = x.BrandModelID.ToString()})" class="form-select">
                    <option>Seçiniz</option>
                </select>
                <br />
                <label>Model</label>
                <select asp-for="SelectedModel" asp-items="@Model.Model.Select(x=> new SelectListItem { Text = x.BrandModelName, Value = x.BrandModelID.ToString() })" class="form-select"></select>
                <br />
                <label>Garantili Mi?</label>
                <select class="form-select">
                    <option>Seçiniz</option>
                </select>               
            </div>
            <div class="col-md-6 form-group">
                <label class="mt-3">Giriş Tarihi</label>
                <input asp-for="CreateDate" type="date" class="form-control" />
                <br />
                <label>Emeklilik Tarihi</label>
                <input asp-for="RetireDate" type="date" class="form-control" />
                <br />
                <label>Maliyeti</label>
                <input asp-for="Cost" type="text" class="form-control" />
                <br />
                <label>Para Birimi</label>
                <select asp-for="SelectedCurrency" asp-items="@Model.Currency.Select(x=> new SelectListItem { Text = x.CurrencyName, Value = x.CurrencyID.ToString() })" class="form-select">
                    <option>Seçiniz</option>
                </select>
                <br />
                <label>Güncel Fiyatı</label>
                <input asp-for="AssetPrice" type="text" class="form-control" />
                <br />
                <label>Guncel Fiyat Para Birimi</label>
                <select asp-for="SelectedCurrency" asp-items="@Model.Currency.Select(x=> new SelectListItem { Text = x.CurrencyName, Value = x.CurrencyID.ToString() })" class="form-select">
                    <option>Seçiniz</option>
                </select>
                <br />
                <label>Açıklama</label>
                <textarea asp-for="Description" class="form-control" style="height:100px"></textarea>
                <div class="mt-3">
                    <input type="submit" value="Kaydet" class="btn btn-primary" onclick="Save" />
                </div>
            </div>
        </div>
    </div>
</form>

