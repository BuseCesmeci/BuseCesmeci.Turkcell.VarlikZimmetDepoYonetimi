@model VarlikZimmetDepoYonetimi.UI.Models.ApiDTO.AssetDTO
@{
    Layout = "~/Views/Shared/_AddAsset.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/startbootstrap-sb-admin-gh-pages/css/styles.css" rel="stylesheet" />

<form asp-action="AddAsset" asp-controller="AssetPage">
    <div class="container py-5">
        <div class="row">
            <div class="form-check form-switch py-3">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Barkod</label>
            </div>
            <div class="col-md-6 mt-3 form-group">
                <label>Barkod</label>
                <input type="text" class="form-control" />
                <br />
                <label>Ürün Tipi</label>
                <select asp-for="AssetTypeID" class="form-select"></select>
                <br />
                <label>Marka</label>
                <select asp-for="BrandModelID" class="form-select"></select>
                <br />
                <label>Model</label>
                <select asp-for="BrandModelID" class="form-select"></select>
                <br />
                <label>Garantili Mi?</label>
                <select class="form-select"></select>
                <br />
                <label>Açıklama</label>
                <textarea asp-for="Description" class="form-control" style="height:100px"></textarea>
            </div>
            <div class="col-md-6 form-group">
                <label class="mt-3">Giriş Tarihi</label>
                <input type="datetime" class="form-control" />
                <br />
                <label>Emeklilik Tarihi</label>
                <input type="datetime" class="form-control" />
                <br />
                <label>Maliyeti</label>
                <input asp-for="Cost" type="text" class="form-control" />
                <br />
                <label>Para Birimi</label>
                <select class="form-select"></select>
                <br />
                <label>Güncel Fiyatı</label>
                <input type="text" class="form-control" />
                <br />
                <label>Guncel Fiyat Para Birimi</label>
                <select class="form-select"></select>
                <div class="mt-3">
                    <input type="submit" value="Kaydet" class="btn btn-primary" onclick="Save" />
                </div>
            </div>
        </div>
    </div>
</form>

<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/startbootstrap-sb-admin-gh-pages/js/datatables-simple-demo.js"></script>