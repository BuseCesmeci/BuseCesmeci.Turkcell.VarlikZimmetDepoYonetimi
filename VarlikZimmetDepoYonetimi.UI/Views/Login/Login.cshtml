@model VarlikZimmetDepoYonetimi.UI.Models.ApiDTO.LoginDTO
@{
    Layout = "~/Views/Shared/_Login.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/startbootstrap-sb-admin-gh-pages/css/styles.css" rel="stylesheet" />

<div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header bg-dark"><h3 class="text-center font-weight-light my-4 text-white">Login</h3></div>
                    <div class="card-body">
                        <form asp-action="Login" asp-controller="Login">
                            <div class="form-floating mb-3">
                                <input asp-for="Username" class="form-control" id="inputUsername" type="text" placeholder="Kullanıcı Adı" />
                                <label for="inputEmail">Kullanıcı Adı</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Password" class="form-control" id="inputPassword" type="password" placeholder="Şifre" />
                                <label for="inputPassword">Şifre</label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                                <label class="form-check-label" for="inputRememberPassword">Remember Password</label>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                <a class="small" href="password.html">Forgot Password?</a>
                                <input class="btn btn-primary" type="submit" value="Login"/> 
                                @*asp-route-username ="@Model.Username" asp-action="AllAsset" *@
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3 bg-dark">
                        <div class="small"><a href="register.html" class="text-white">Need an account? Sign up!</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/startbootstrap-sb-admin-gh-pages/js/datatables-simple-demo.js"></script>